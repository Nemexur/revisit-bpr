---
num_users: &num_users {{ (num_users | int) + 1 }}
num_items: &num_items {{ (num_items | int) + 1 }}

experiment:
  _target_: experiments.libraries.implicit.Experiment
  metrics:
    ndcg@100:
      _target_: src.metrics.NDCG
      topk: 100
    recall@100:
      _target_: src.metrics.Recall
      topk: 100
    ndcg@10:
      _target_: src.metrics.NDCG
      topk: 10
    recall@10:
      _target_: src.metrics.Recall
      topk: 10
    auc:
      _target_: src.metrics.RocAucManySlow
    ndcg@5:
      _target_: src.metrics.NDCG
      topk: 5
    recall@5:
      _target_: src.metrics.Recall
      topk: 5
    recall@20:
      _target_: src.metrics.Recall
      topk: 20
    ndcg@50:
      _target_: src.metrics.NDCG
      topk: 50
    recall@50:
      _target_: src.metrics.Recall
      topk: 50
    precision@5:
      _target_: src.metrics.Precision
      topk: 5
    precision@10:
      _target_: src.metrics.Precision
      topk: 10
    precision@50:
      _target_: src.metrics.Precision
      topk: 50
    precision@100:
      _target_: src.metrics.Precision
      topk: 100

optuna:
  model.inner_model.iterations:
    dtype: int
    low: 50
    high: 700
  model.inner_model.learning_rate:
    dtype: float
    low: !!float 1e-5
    high: !!float 5e-2
  model.inner_model.regularization:
    dtype: float
    low: !!float 1e-6
    high: !!float 1e-2

datasets:
  train: {{ dataset }}/full-train.jsonl
  eval:
    _target_: torch.utils.data.DataLoader
    dataset:
      _target_: experiments.bpr.dataset.Iter
      path: {{ dataset }}/test-grouped.jsonl
      seen_items_path: {{ dataset }}/full-train-user-seen-items.jsonl
    collate_fn:
      _target_: experiments.bpr.dataset.AllItemsCollator
      num_items: *num_items
    batch_size: 32
    shuffle: false
    pin_memory: true
    num_workers: 1

optuna_datasets:
  train: {{ dataset }}/train.jsonl
  eval:
    _target_: torch.utils.data.DataLoader
    dataset:
      _target_: experiments.bpr.dataset.Iter
      path: {{ dataset }}/eval-grouped.jsonl
      seen_items_path: {{ dataset }}/train-user-seen-items.jsonl
    collate_fn:
      _target_: experiments.bpr.dataset.AllItemsCollator
      num_items: *num_items
    batch_size: 32
    shuffle: false
    pin_memory: true
    num_workers: 1

model:
  _target_: experiments.libraries.implicit.Model
  inner_model:
    _target_: implicit.{{ device | default("cpu", true) }}.bpr.BayesianPersonalizedRanking
    factors: {{ embedding_dim | int }}
    learning_rate: 0.001
    regularization: 0.0025
    iterations: 10
    verify_negative_samples: True
    random_state: {{ seed }}
  num_users: *num_users
  num_items: *num_items
