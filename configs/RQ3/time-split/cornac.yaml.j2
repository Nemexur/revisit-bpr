optuna:
  model.max_iter:
    dtype: int
    low: 50
    high: 700
  model.learning_rate:
    dtype: float
    low: !!float 1e-5
    high: !!float 5e-2
  model.lambda_reg:
    dtype: float
    low: !!float 1e-6
    high: !!float 1e-2

datasets:
  train: {{ dataset }}/full-train.jsonl
  eval: {{ dataset }}/test-grouped.jsonl

optuna_datasets:
  train: {{ dataset }}/train.jsonl
  eval: {{ dataset }}/eval-grouped.jsonl

model:
  _target_: cornac.models.BPR
  k: {{ embedding_dim | int }}
  learning_rate: 0.001
  max_iter: 10
  lambda_reg: 0.0025
  num_threads: {{ num_threads | default(10, true) }}
